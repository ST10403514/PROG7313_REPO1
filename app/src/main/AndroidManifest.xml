<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_foreground"
        android:supportsRtl="true"
        android:theme="@style/Theme.L1_Prog7313"
        tools:targetApi="31">

        <!-- Register Activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true" />

        <!-- Login Activity (NOW THE LAUNCHER) -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Profile -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false" />

        <!-- Menu Activity (Target after successful login) -->
        <activity
            android:name=".MenuActivity"
            android:exported="true" />

        <!-- Splash Screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true" />

        <!-- Main Activity (Optional) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

    </application>

</manifest>

